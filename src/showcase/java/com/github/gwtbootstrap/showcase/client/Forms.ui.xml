                &lt;b:InputAddOn prependText="$" appendText=".00"&gt;
                    &lt;b:TextBox/&gt;
                &lt;/b:InputAddOn&gt;
            &lt;/b:Controls&gt;
        &lt;/b:ControlGroup&gt;
        &lt;b:ControlGroup&gt;
            &lt;b:ControlLabel&gt;Widget append and prepend&lt;/b:ControlLabel&gt;
            &lt;b:Controls&gt;
                &lt;b:InputAddOn&gt;
                    &lt;b:prependWidget&gt;
                        &lt;b:CheckBox/&gt;
